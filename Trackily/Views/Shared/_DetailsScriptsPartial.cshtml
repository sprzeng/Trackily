<script>
    $(document).ready(function () {
        // toggleEditReply(string, string)
        function toggleEditReply(commentId, index) {
            var idString = commentId + '-' + index;
            var editor = tinymce.get(idString);
            editor.mode.set('design');
        }
    });
</script>

